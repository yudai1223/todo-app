.container
  %h2 New Task
  %ul
    -# - board.errors.full_messages.each do |message|
    -#   %li= message
  = form_with(model:task,url: board_tasks_path(@task.board), local: true) do |f|
    %div
      = f.label :eyecatch, 'eyecatch'
    %div
      = f.file_field :eyecatch  
    %div
      = f.label :title, 'Name'
    %div
      = f.text_field :title, class: 'text'
    %div
      = f.label :content, 'Description'
    %div
      = f.text_area :content
    = f.submit '保存', class: 'submit submit-color'