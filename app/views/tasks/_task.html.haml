= link_to board_task_path(@task) do
  .card
    - if board.eyecatch.attached?
      .card_image
        = image_tag board.eyecath
    .card_content
      .card_title
        = board.title
      .card_content
        = board.content
      .card_detail
        = image_tag board.user.avatar_image
        %div